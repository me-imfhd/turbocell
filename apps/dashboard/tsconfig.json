{
  "extends": "@repo/tsconfig/nextjs.json",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": ["./*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true
  },
  "include": [
    ".",
    "next.config.mjs",
    "next-env.d.ts",
    "postcss.config.cjs",
    "tailwind.config.ts",
    "next-env.d.ts",
    ".next/types/**/*.ts"
  ]
}
